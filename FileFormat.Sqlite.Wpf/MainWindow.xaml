<Window x:Class="FileFormat.Sqlite.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileFormat.Sqlite.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Margin="5" x:Name="Image_Local"/>
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
            <Button x:Name="Button_LoadImage" Click="Button_LoadImage_Click" Margin="5" Content="加载图片"/>
            <Button x:Name="Button_SaveImage" Click="Button_SaveImage_Click" Margin="5" Content="保存图片"/>
            <Button x:Name="Button_ReadImage" Click="Button_ReadImage_Click" Margin="5" Content="读取图片"/>
        </StackPanel>
    </Grid>
</Window>
